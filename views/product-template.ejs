<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vorlage auswählen</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const templateCards = document.querySelectorAll(".template-card");
        const nextBtn = document.getElementById("nextButton");
        let selectedTemplate = null;

        templateCards.forEach((card) => {
          card.addEventListener("click", () => {
            // Remove active styles from others
            templateCards.forEach((c) =>
              c.classList.remove("ring-2", "ring-purple-500")
            );
            // Set active
            card.classList.add("ring-2", "ring-purple-500");
            selectedTemplate = card.dataset.template;
          });
        });

        nextBtn.addEventListener("click", () => {
          if (!selectedTemplate) {
            alert("Bitte wählen Sie eine Vorlage aus.");
            return;
          }
          window.location.href =
            "/import-products?template=" + encodeURIComponent(selectedTemplate);
        });
      });
    </script>
  </head>
  <body class="min-h-screen flex items-center justify-center bg-white px-4">
    <div class="text-center w-full max-w-5xl">
